<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PickUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12sp"
        android:orientation="vertical"
        android:padding="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12sp"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/pickup_to_arrow"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/notify"
                android:padding="3dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pickup"
                        android:textStyle="bold"
                        android:textSize="23sp"
                        android:textColor="@color/Black"
                        android:textAlignment="center"/>

                    <TextView
                        android:id="@+id/pickuplocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kuala Ibai"
                        android:fontFamily="@font/MontserratMedium"
                        android:layout_marginTop="10dp"
                        android:textSize="19sp"
                        android:textColor="@color/Black"
                        android:textAlignment="center"/>

                </LinearLayout>



            </LinearLayout>

            <ImageView
                android:id="@+id/pickup_to_arrow"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/ic_arrow_forward_black_24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/pickup_to_arrow"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/notify"
                android:padding="3dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Drop Off"
                        android:textStyle="bold"
                        android:textSize="23sp"
                        android:textColor="@color/Black"
                        android:textAlignment="center"/>

                    <TextView
                        android:id="@+id/dropOfflocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Marang"
                        android:fontFamily="@font/MontserratMedium"
                        android:layout_marginTop="10dp"
                        android:textSize="19sp"
                        android:textColor="@color/Black"
                        android:textAlignment="center"/>

                </LinearLayout>



    </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


        <LinearLayout
            android:layout_width="371dp"
            android:layout_height="72dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/notify"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:gravity="left"
                android:text="Kuala Terengganu, Terengganu, Malaysia"
                android:textColor="@color/Black"
                android:textSize="23sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="371dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:background="@drawable/notify"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:gravity="left"
                android:text="Please Wait At The Front Gate"
                android:textColor="@color/Black"
                android:textSize="23sp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:id="@+id/map_container">

            <com.google.android.gms.maps.MapView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:id="@+id/user_list_map" />



        </RelativeLayout>



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10sp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/notify">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:orientation="horizontal"
                android:padding="3dp"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="left"
                    android:layout_gravity="left"
                    android:background="@drawable/verticalline"
                    >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_call_black_24dp"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="CALL"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:fontFamily="@font/MontserratMedium"
                        android:textSize="18sp"
                        android:textColor="@color/Black"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="left"
                    android:layout_gravity="left"
                    android:background="@drawable/verticalline">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_chat_black_24dp"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="CHAT"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:fontFamily="@font/MontserratMedium"
                        android:textSize="18sp"
                        android:textColor="@color/Black"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="65dp"
                    android:orientation="vertical"
                    android:gravity="left"
                    android:layout_gravity="left"
                    android:background="@drawable/verticalline">

                    <Switch
                        android:id="@+id/simpleSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:checked="true"

                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="AVAILABLE"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:fontFamily="@font/MontserratMedium"
                        android:textSize="18sp"
                        android:textColor="@color/Black"/>


                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/acceptItem"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/circlebutton"
                android:text="@string/acceptBtn"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_margin="10dp"/>
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>