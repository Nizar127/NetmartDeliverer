<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50sp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/timetosend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/notifytimeSend"
            android:textSize="20sp"
            android:textColor="@color/Black"
            android:fontFamily="@font/MontserratMedium"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="5dp"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/notifyImageId"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="30dp"
                        android:src="@drawable/ic_person_black_24dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:orientation="vertical">



                        <TextView
                            android:id="@+id/notifyTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:fontFamily="@font/MontserratBold"
                            android:textStyle="bold"
                            android:text="@string/notifyTitle"/>


                        <TextView
                            android:id="@+id/notifyDeliveryTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:fontFamily="@font/MontserratMedium"
                            android:textStyle="bold"
                            android:paddingTop="5dp"
                            android:text="@string/notifytimeSend"/>

                        <TextView
                            android:id="@+id/notifyDeliveryDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:fontFamily="@font/MontserratMedium"
                            android:textStyle="bold"
                            android:paddingTop="5dp"
                            android:text="@string/notifyDate"/>

                        <TextView
                            android:id="@+id/notifyDeliveryItem"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:fontFamily="@font/MontserratMedium"
                            android:textStyle="bold"
                            android:paddingTop="5dp"
                            android:text="@string/itemNumber"/>

                        <TextView
                            android:id="@+id/notifyItemDetails"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:fontFamily="@font/MontserratMedium"
                            android:textStyle="bold"
                            android:textColor="#0000FF"
                            android:paddingTop="5dp"
                            android:paddingBottom="20dp"
                            android:text="@string/viewDetails"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="20dp"
                        android:gravity="center"
                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_gravity="center">

                            <ImageView
                                android:id="@+id/messageUser"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:paddingRight="10dp"
                                android:src="@drawable/ic_email_black_24dp"/>

                            <ImageView
                                android:id="@+id/locationToSend"
                                android:layout_width="50dp"
                                android:layout_height="80dp"
                                android:paddingLeft="10dp"
                                android:src="@drawable/ic_location_on_black_24dp" />

                        </LinearLayout>


                        <TextView
                            android:id="@+id/notifyTotalPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="25sp"
                            android:fontFamily="@font/MontserratMedium"
                            android:textStyle="bold"
                            android:textColor="#0000FF"
                            android:paddingTop="5dp"
                            android:paddingBottom="10dp"
                            android:paddingLeft="20dp"
                            android:text="RM 30.00"/>


                    </LinearLayout>



                </LinearLayout>




            </>


        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            />


    </LinearLayout>



</LinearLayout>